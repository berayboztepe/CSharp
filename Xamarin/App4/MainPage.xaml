             x:Class="App4.MainPage">

    <StackLayout>
        <Label x:Name="AccelX" FontSize="20" HorizontalTextAlignment="Center" />
        <Label x:Name="AccelY" FontSize="20" HorizontalTextAlignment="Center" />
        <Label x:Name="AccelZ" FontSize="20" HorizontalTextAlignment="Center" />
        <Label x:Name="rotation" FontSize="20" HorizontalTextAlignment="Center" />
        <Label x:Name="magneto" FontSize="20" HorizontalTextAlignment="Center" />
