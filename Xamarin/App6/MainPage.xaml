<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.MainPage">

    <StackLayout>
        <Label x:Name="activecases" FontSize="50" HorizontalTextAlignment="Center" />
        <Picker x:Name="CountryPicker" Title="Select Country"/>
        <ActivityIndicator IsVisible="false" IsRunning="false" x:Name="activity" />
        <Button Text="Get Active Cases" Clicked="Button_Clicked" />
        <Button Text="First Click This to Add Countries" Clicked="Button_Clicked_1" />
        <Label x:Name="countries_add" FontSize="20" HorizontalTextAlignment="Center" IsVisible="False"/>
    </StackLayout>

</ContentPage>
